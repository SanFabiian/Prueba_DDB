.header
    width 100%
    height 7rem
    background color_dark
    font-family font_family_one
    flex_center()
.header_brand
    max-width 8rem
.header_nav
    background color_secundary
    position fixed
    top 0
    right -15%
    bottom 0
    left 0
    display flex
    flex-direction column
    justify-content flex-end
    align-items flex-start
    padding-bottom 5rem
    z-index 1
    ul
        width 100%
    li
        width 100%
    a
        display block
        padding 2rem 3rem
        width 100%
        height 100%
        font-size font_size_title
        color color_light
.header_btn_navOpen, .header_btn_navClose
    width 3rem
    height 3rem
    border-radius 50%
    padding 1rem
    position fixed
    top 1rem
    right 1rem
    background alpha(color_primary, 50%)
    color color_light
    border none
    font-size font_size_title
    box-sizing content-box
    z-index 1
.header_btn_navClose
    right 15%
.btn_close
    display none
.navActive
    animation-name navActive
    animation-duration 0.7s
    animation-fill-mode forwards
.navNoActive
    animation-name navNoActive
    animation-duration 0.7s
    animation-fill-mode forwards
@keyframes navActive
    from
        transform translateX(100%)
    50%
        transform translateX(-10%)
    to
        transform translateX(0)
@keyframes navNoActive
    from
        transform translateX(0)
    50%
        transform translateX(-10%)
    to
        transform translateX(100%)
